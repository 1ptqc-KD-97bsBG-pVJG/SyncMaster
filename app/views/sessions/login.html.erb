<div class="container" style="margin-top: 20px;">
  <style>
    input[type="email"] {
      border-bottom-left-radius: 0px;;
      border-bottom-right-radius: 0px;;
    }
    input[type="password"] {
      border-top-left-radius: 0px;;
      border-top-right-radius: 0px;;
    }
  </style>
  <div class="text-center mt-5"> 
    <%= form_with url: login_path, method: :post do |form|%>
      
      <%= image_tag 'palmlogowhite.png', alt: 'My Logo', height: '100' %>
      <h1 class ="h3 mt-3 font-weight-normal">Please sign in</h1>


      <%= form.email_field :email, placeholder: "Email Address" id="emailAddress" class = "form-control",  autofocus: true%>
      <%= form.password_field :password, placeholder: "Password" id="password" class = "form-control"%>

      <div class="checkbox mt-3">
       <label>
         <input type="checkbox" value="remember-me"> Remember me
       </label>
      </div>
      <div class="mt-3">
        <button class="btn btn-lg btn-primary btn-block">Sign In</button>
      </div>
    <% end %>
  </div>
</div>