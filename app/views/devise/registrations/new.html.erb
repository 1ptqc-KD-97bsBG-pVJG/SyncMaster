<div class="container border rounded mt-3" style="margin:auto;max-width:480px">
  <div class="text-center mt-5"> 
    <%= image_tag 'palmlogowhite.png', alt: 'My Logo', height: '100' %>
    <h2 class="mt-3">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: "max-width:480px;margin:auto;" }, data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', aria: { label: 'Name' }, autofocus: true %>
        <br>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address', aria: { label: 'Email' }, autocomplete: "email" %>
        <br>
        <%= f.password_field :password, class: 'form-control', placeholder: "Password", style: 'border-radius: 0.35rem 0.35rem 0 0; border-bottom: none', aria: { label: 'Password' }, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Re-enter password", style: 'border-radius: 0 0 0.35rem 0.35rem', aria: { label: 'Password Confirmation' }, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary mt-3 mb-3' %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>